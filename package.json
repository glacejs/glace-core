{
  "name": "glace-core",
  "version": "1.4.7",
  "description": "GlaceJS minimal functional testing framework",
  "main": "lib/index.js",
  "scripts": {
    "ci": "npm run lint && npm run test:unit",
    "test": "./bin/glace",
    "test:unit": "nyc ./bin/glace tests/unit",
    "test:cover": "nyc --reporter=lcov ./bin/glace tests/unit",
    "test:commit": "./bin/glace tests/unit",
    "test:basic": "./bin/glace tests/e2e/testBasic.js",
    "test:retry": "./bin/glace tests/e2e/testRetry.js --retry 2",
    "test:chunk-retry": "./bin/glace tests/e2e/testRetry.js --chunk-retry 2",
    "test:own-app": "./tests/e2e/ownApp tests/e2e/testBasic.js",
    "test:suppress-uncaught": "./bin/glace tests/e2e/testUncaughtExceptions.js",
    "test:fail-uncaught": "./bin/glace tests/e2e/testUncaughtExceptions.js --uncaught fail",
    "test:mocha-uncaught": "./bin/glace tests/e2e/testUncaughtExceptions.js --uncaught mocha",
    "test:timer-steps": "./bin/glace tests/e2e/testTimerSteps.js",
    "test:custom-reporter": "./bin/glace tests/e2e/testCustomReporter.js",
    "test:retry-only-params": "./bin/glace tests/e2e/testRetryOnlyParams.js --retry 3",
    "test:include": "./bin/glace tests/e2e/testInclude.js --include \"test 1 | test 2\"",
    "test:exclude": "./bin/glace tests/e2e/testExclude.js --exclude \"test 1 | test 2\"",
    "test:e2e": "npm run test:basic; npm run test:retry; npm run test:chunk-retry; npm run test:own-app; npm run test:suppress-uncaught; npm run test:fail-uncaught; npm run test:mocha-uncaught; npm run test:timer-steps; npm run test:custom-reporter; npm run test:retry-only-params; npm run test:include; npm run test:exclude",
    "docs": "rm -rf docs && jsdoc -c jsdoc.json -d docs",
    "docs:publish": "npm run docs && git add -A && git commit -m \"update docs\" && git push origin master",
    "lint": "eslint lib",
    "lint:fix": "eslint lib --fix"
  },
  "pre-commit": [
    "lint",
    "test:commit"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glacejs/glace-core.git"
  },
  "author": "Sergei Chipiga <chipiga86@gmail.com>",
  "license": "MIT",
  "bin": {
    "glace": "./bin/glace"
  },
  "bugs": {
    "url": "https://github.com/glacejs/glace-core/issues"
  },
  "homepage": "https://glacejs.github.io/glace-core",
  "dependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "cli-highlight": "^1.2.3",
    "colors": "^1.2.1",
    "fs-extra": "^4.0.3",
    "glace-utils": "^1.2.0",
    "lodash": "^4.17.5",
    "mocha": "^5.0.5",
    "natural": "^0.5.6",
    "pretty-ms": "^3.1.0",
    "rewire": "^3.0.2",
    "sinon": "^4.5.0",
    "sinon-chai": "^2.14.0",
    "temp": "^0.8.3",
    "testrail-api": "^1.3.2"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "ink-docstrap": "^1.3.0",
    "jsdoc": "^3.5.5",
    "jsdoc-strip-async-await": "^0.1.0",
    "nyc": "^11.6.0",
    "pre-commit": "^1.2.2"
  },
  "engines": {
    "node": ">=8.9",
    "npm": ">=5.5"
  },
  "files": [
    "bin",
    "lib"
  ]
}
