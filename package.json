{
  "name": "glace-core",
  "version": "1.8.6",
  "description": "GlaceJS minimal functional testing framework",
  "main": "lib/index.js",
  "scripts": {
    "ci": "npm run lint && npm run test:unit",
    "release": "VERSION=$(cat package.json | grep version | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git add -u && git commit -m \"release $VERSION\" && git tag $VERSION && git push origin $VERSION && npm run docs:publish && npm publish",
    "test": "node ./bin/glace",
    "test:unit": "nyc ./bin/glace tests/unit --dont-check-names",
    "test:cover": "nyc --reporter=lcov --report-dir ./docs/tests-cover ./bin/glace tests/unit --dont-check-names --allure",
    "test:basic": "node ./bin/glace tests/e2e/testBasic.js --languages \"en, ru\"",
    "test:retry": "node ./bin/glace tests/e2e/testRetry.js --retry 2",
    "test:chunk-retry": "node ./bin/glace tests/e2e/testRetry.js --chunk-retry 2",
    "test:own-app": "node ./tests/e2e/ownApp tests/e2e/testBasic.js",
    "test:suppress-uncaught": "node ./bin/glace tests/e2e/testUncaughtExceptions.js",
    "test:fail-uncaught": "node ./bin/glace tests/e2e/testUncaughtExceptions.js --uncaught fail",
    "test:mocha-uncaught": "node ./bin/glace tests/e2e/testUncaughtExceptions.js --uncaught mocha",
    "test:timer-steps": "node ./bin/glace tests/e2e/testTimerSteps.js",
    "test:custom-reporter": "node ./bin/glace tests/e2e/testCustomReporter.js",
    "test:retry-only-params": "node ./bin/glace tests/e2e/testRetryOnlyParams.js --retry 3",
    "test:retry-with-include": "node ./bin/glace tests/e2e/testRetryWithInclude.js --include tests/e2e/include.json --retry 1",
    "test:include": "node ./bin/glace tests/e2e/testInclude.js --include \"test 1 | test 2\"",
    "test:exclude": "node ./bin/glace tests/e2e/testExclude.js --exclude \"test 1 | test 2\"",
    "test:e2e": "npm run test:basic; npm run test:retry; npm run test:chunk-retry; npm run test:own-app; npm run test:suppress-uncaught; npm run test:fail-uncaught; npm run test:mocha-uncaught; npm run test:timer-steps; npm run test:custom-reporter; npm run test:retry-only-params; npm run test:retry-with-include; npm run test:include; npm run test:exclude",
    "allure:report": "npm run test:cover && allure generate report/allure --report-dir ./docs/allure-report",
    "docs": "rm -rf docs && jsdoc -c jsdoc.json -d docs && npm run allure:report",
    "docs:publish": "npm run docs && git add docs && git commit -m \"update docs\" && git push origin master",
    "lint": "eslint lib tests",
    "lint:fix": "npm run lint -- --fix"
  },
  "nyc": {
    "exclude": [
      "lib/hacking.js",
      "tests"
    ],
    "check-coverage": true,
    "branches": 92,
    "functions": 96,
    "lines": 98,
    "statements": 98
  },
  "pre-commit": [
    "lint",
    "test:unit"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glacejs/glace-core.git"
  },
  "author": "Sergei Chipiga <chipiga86@gmail.com>",
  "license": "MIT",
  "bin": {
    "glace": "./bin/glace"
  },
  "bugs": {
    "url": "https://github.com/glacejs/glace-core/issues"
  },
  "homepage": "https://glacejs.github.io/glace-core",
  "dependencies": {
    "allure-js-commons": "^1.3.2",
    "bayes": "0.0.7",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-datetime": "^1.5.0",
    "chai-fs": "^2.0.0",
    "chai-string": "^1.4.0",
    "cli-highlight": "^1.2.3",
    "colors": "^1.3.1",
    "cross-spawn": "^6.0.5",
    "fs-extra": "^4.0.3",
    "glace-utils": "^1.2.9",
    "is-promise": "^2.1.0",
    "lodash": "^4.17.10",
    "mocha": "^5.2.0",
    "pretty-ms": "^3.2.0",
    "rewire": "^3.0.2",
    "sinon": "^4.5.0",
    "sinon-chai": "^2.14.0",
    "temp": "^0.8.3",
    "testrail-api": "^1.3.4"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "ink-docstrap": "^1.3.0",
    "jsdoc": "^3.5.5",
    "jsdoc-strip-async-await": "^0.1.0",
    "nyc": "^11.9.0",
    "pre-commit": "^1.2.2"
  },
  "engines": {
    "node": ">=8.9",
    "npm": ">=5.5"
  },
  "files": [
    "bin",
    "lib"
  ]
}
